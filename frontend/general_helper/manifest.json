{
    "manifest_version": 3,
    "name": "General Helper",
    "version": "1.0",
    "description": "A helpful Chrome extension for general tasks.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js", "dist/bundle.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "sidePanel"
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}