{
    "manifest_version": 3,
    "name": "General Helper",
    "version": "1.0",
    "description": "A helpful Chrome extension for general tasks.",
    "action": {
        "default_title": "General Helper",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "sidePanel"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}